doctype html
head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title #{title}
    // Font Icon
    link(rel='stylesheet' href='fonts/material-icon/css/material-design-iconic-font.min.css')
    // Main css
    link(rel='stylesheet' href='stylesheets/style.css')
.main
    // Sing in  Form
    section.sign-in
        .container
            .signin-content
                .signin-image
                    figure
                        img(src='images/signin-image.jpg' alt='sing up image')
                    a.signup-image-link(href='/signup') Create an account
                .signin-form
                    h2.form-title Sign up
                    .register-form
                        .form-group
                            label(for='your_name')
                                i.zmdi.zmdi-account.material-icons-name
                            input#your_name(type='text' name='your_name' placeholder='Your Name' value='')
                        .form-group
                            label(for='your_pass')
                                i.zmdi.zmdi-lock
                            input#your_pass(type='password' name='your_pass' placeholder='Password' value='')
                        .form-group
                            input#remember-me.agree-term(type='checkbox' name='remember-me')
                            label.label-agree-term(for='remember-me')
                                span
                                    span
                                | Remember me
                        .form-group.form-button
                            button(onclick='login();') login
// JS
script(src='javascripts/jquery.min.js')
script(src='javascripts/user.js')
